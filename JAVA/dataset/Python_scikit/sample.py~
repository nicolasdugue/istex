from sklearn.datasets.samples_generator import make_blobs
from sklearn.cluster import AgglomerativeClustering
import itertools

X, y = make_blobs(n_samples=100, centers=3, n_features=300,random_state=0)
print(X.shape)

clustering = AgglomerativeClustering(linkage='ward', n_clusters=20, compute_full_tree=False)
y_predict=clustering.fit_predict(X)


ii = itertools.count(X.shape[0])
tree=[{'node_id': next(ii), 'left': x[0], 'right':x[1]} for x in clustering.children_]
for leaf in tree:
	print leaf
