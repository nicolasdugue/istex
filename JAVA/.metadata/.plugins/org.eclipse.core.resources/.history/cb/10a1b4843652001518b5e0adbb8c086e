package test;

import static org.junit.Assert.*;

import org.junit.Before;
import org.junit.Test;

import io.reader.ArcsReader;
import io.reader.IMatrixReader;
import io.reader.MatrixReader;
import model.util.PairI;

public class TestArcsReader {

	private IMatrixReader m;
	@Before
	public void setUp() throws Exception {
		m = new ArcsReader("matrix");

	}

	@Test
	public void testRead() {
			//Rows
		assertEquals(2, m.getMatrix_rows().get(0).size());
		assertEquals(2, m.getMatrix_rows().get(1).size());
		assertEquals(1, m.getMatrix_rows().get(2).size());
		assertEquals(1, m.getMatrix_rows().get(3).size());

		assertTrue(cm.getRow(0).contains(new PairI(0, 2)) && cm.getRow(0).contains(new PairI(3, 7))
				&& cm.getRow(1).contains(new PairI(0, 1)) && cm.getRow(1).contains(new PairI(1, 3))
				&& cm.getRow(2).contains(new PairI(3, 8)) && cm.getRow(3).contains(new PairI(2, 4)));
			
			
			//Columns
			assertEquals(m.getXijColumns(0, 0),(new PairI(0,2)));
			assertEquals(m.getXijColumns(0, 1),(new PairI(1,1)));
			
			assertEquals(m.getXijColumns(1, 0),(new PairI(1,3)));
			
			assertEquals(m.getXijColumns(2, 0),(new PairI(3,4)));
			
			assertEquals(m.getXijColumns(3, 0),(new PairI(0,7)));
			assertEquals(m.getXijColumns(3, 1),(new PairI(2,8)));
			
			//Descriptors
			assertEquals(m.getNb_columns(),4);
			assertEquals(m.getNb_rows(),4);
			assertEquals(m.getNb_elmt(), 6);
		
	}

}
